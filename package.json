{
  "name": "@oakheart/ps-tools-node",
  "version": "2.0.1",
  "description": "Javascript tooling setup",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "eslint_check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "prettier": "prettier --write *.{js,jsx,json,css,md}",
